{
    "active_directory": {
        "server": "ldap://your-ad-server.domain.com:389",
        "use_ssl": true,
        "ssl_port": 636,
        "domain": "yourdomain.com",
        "base_dn": "DC=yourdomain,DC=com",
        "bind_dn": "CN=ServiceAccount,OU=Service Accounts,DC=yourdomain,DC=com",
        "password": "YourSecureServiceAccountPassword",
        "timeout": 30,
        "auto_bind": true,
        "receive_timeout": 10
    },
    "organizational_units": {
        "users_ou": "OU=Users,DC=yourdomain,DC=com",
        "groups_ou": "OU=Groups,DC=yourdomain,DC=com",
        "computers_ou": "OU=Computers,DC=yourdomain,DC=com",
        "service_accounts_ou": "OU=Service Accounts,DC=yourdomain,DC=com"
    },
    "security": {
        "enable_tls": true,
        "validate_certificate": true,
        "ca_cert_file": "/app/ssl/ca-certificate.pem",
        "require_secure_connection": true
    },
    "logging": {
        "level": "INFO",
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
        "file": "/var/log/activedirectory_mcp.log"
    },
    "performance": {
        "connection_pool_size": 10,
        "max_retries": 3,
        "retry_delay": 1.0,
        "page_size": 1000
    }
}
